<?xml version="1.0" encoding="UTF-8"?>
<sequence name="getCelcomAuthTokenSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <header name="Authorization" scope="transport" value="Basic UkdlOGk3MnBQZWhGMElFRzc1ZjVPUW5sNzFxSzlLSWE6d1AxWWpIblFBenN1RkEweQ=="/>
  <property
    expression="get-property('registry','local:/Resource/celcomRefreshToken')"
    name="refreshToken" scope="default" type="STRING"/>
  <filter regex="false" source="boolean(get-property('refreshToken'))">
    <then>
      <sequence key="celcomAuthCallSeq"/>
    </then>
    <else>
      <payloadFactory media-type="xml">
        <format>
          <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
            <soapenv:Header/>
            <soapenv:Body>
              <root>
                <grant_type>refresh_token</grant_type>
                <refresh_token>$1</refresh_token>
              </root>
            </soapenv:Body>
          </soapenv:Envelope>
        </format>
        <args>
          <arg evaluator="xml" expression="get-property('registry', 'local:/Resource/celcomRefreshToken')"/>
        </args>
      </payloadFactory>
    </else>
  </filter>
  <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded"/>
  <call>
    <endpoint key="CelcomTokenEndpoint"/>
  </call>
  <switch source="get-property('axis2', 'HTTP_SC')">
    <case regex="200">
      <sequence key="setCelcomRegistryTokens"/>
    </case>
    <default>
      <header name="Authorization" scope="transport" value="Basic UkdlOGk3MnBQZWhGMElFRzc1ZjVPUW5sNzFxSzlLSWE6d1AxWWpIblFBenN1RkEweQ=="/>
      <sequence key="celcomAuthCallSeq"/>
      <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded"/>
      <call>
        <endpoint key="CelcomTokenEndpoint"/>
      </call>
      <sequence key="setCeclomRegistryTokens"/>
    </default>
  </switch>
  <drop/>
</sequence>
