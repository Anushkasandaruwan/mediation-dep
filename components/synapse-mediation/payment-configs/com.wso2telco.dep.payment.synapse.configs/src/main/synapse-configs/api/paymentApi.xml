<api xmlns="http://ws.apache.org/ns/synapse" name="payment:vv1.0.0" context="/payment/v1.0.0">
    <resource methods="DELETE POST PUT GET" url-mapping="/*">
        <inSequence>
            <sequence key="paymentMainSeq"/>
        </inSequence>
        <outSequence>
            <switch xmlns:ns="http://org.apache.synapse/xsd" source="$axis2:HTTP_SC">
                <case regex="(200|201)">
                    <sequence key="replaceResourceURLSeq"/>
                </case>
                <default/>
            </switch>
            <respond/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>